{% extends 'USECStudentBundle:Default:layout.html.twig' %}

{% block title %}
Profil de l'étudiant - {{ student.firstName }} {{ student.name|upper }}
{% endblock %}

{% block content %}
<div class="row-fluid jumbotron">
	<div class="span10 offset1">
		<h2>{{ student.firstName }} {{ student.name|upper }}</h2>
		<dl class="dl-horizontal dl-horizontal-larger">
			<dt>Filière</dt>
		  	<dd>{{ student.course }}</dd>
		  	<dt>Compétences</dt>
		  	<dd>{{ student.skills }}</dd>
		  	<dt>Intéressé par</dt>
		  	<dd>{{ student.interestedIn }}</dd>
		  	<dt>Motivation</dt>
		  	<dd>{{ student.motivation }}</dd>
		  	<dt>Sortie de l'UTC</dt>
		  	<dd>{{ student.endCourseSemester }}</dd>
			<dt>Login UTC</dt>
			<dd>{{ student.username }}</dd>
			<dt>Email</dt>
			<dd>{{ student.email }}</dd>
			<dt>Téléphone</dt>
			<dd>{{ student.phone }}</dd>
			<dt>Apprenti</dt>
			<dd>{% if student.apprenti %}oui{% else %}non{% endif %}</dd>
			<hr/>
			
			<dt>Notifications email</dt>
			<dd>{% if student.isSubscribedToEmails %}oui{% else %}non{% endif %}</dd>
			<dt>Droits d'admin</dt>
			<dd>{{ student.role }}</dd>
		  	<dt>Date d'inscription</dt>
		  	<dd>{{ student.creationDate|date("d/m/Y") }}</dd>
		  	{% if student.changeDate is not null %}
			  	<dt>Dernière mise-à-jour</dt>
			  	<dd>{{ student.changeDate|date("d/m/Y") }}</dd>
		  	{% endif %}
		</dl>
	</div>
</div>
<div class="text-right">
	<a class="btn" href="{{ path('student_admin') }}">Retour à la liste</a>
</div>
{% endblock %}